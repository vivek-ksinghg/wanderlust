<% layout("/layouts/boilerplate") %>
<body>
  
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form 
    method="POST" 
    action="/listings" 
    novalidate class=" needs-validation" 
    enctype="multipart/form-data"
    >
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input name="listing[title]" 
          placeholder="Add a catchy title" 
          type="text" 
          class="form-control"
         required

        />
        <div class="valid-feedback">
          Looks good!
        </div>
        </div>
      
     <div class="mb-3">
        <lable for="Description" class="form-label">Desciption</lable>
      <textarea name="listing[description]" class="form-control" type="text" placeholder="enter description"  required></textarea>
      <!-- <textarea name="description" class="form-control" type="text" placeholder="enter description" ></textarea> -->
      <div class="invalid-feedback">
        please enter a short description
        </div>

     </div>
     
<!-- Upload files -->
    <div class="mb-3">
      <lable for="Image" class="form-label">Upload Image</lable>
      <input 
      name="listing[image]"    
      type="file" 
      class="form-control">
   
      </div>

    <div class="row">

        <div class="mb-3 col-md-4">
            <lable for="Price" class="form-label">Price</lable>
              <input name="listing[price]" placeholder=1200 type="text" class="form-control" required>
              <div class="invalid-feedback">
              please enter a valid Price 
              </div>
            </div>
        
            <div class="mb-3 col-md-8">
            <lable for="Country" class="form-label">Country</lable>
              <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
              <div class="invalid-feedback">
                please enter the country name 
                </div>
              </div>
        
    </div>
     
      <div class="mb-3">
      <lable for="Location" class="form-label">Location</lable>
      <input name="listing[location]" placeholder="Patna, Bihar" type="text" class="form-control" required>
      <div class="invalid-feedback">
        please enter a valid Location 
        </div>
      </div>
   
     <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>

</div>
</div>
</body>
