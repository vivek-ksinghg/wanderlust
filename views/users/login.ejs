<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login"  method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" 
                id="username"
                type="text" 
                class="form-control"
               required
      
              />
              </div>

              <!-- password -->              
              <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" 
                id="password"
                type="password" 
                class="form-control"
               required
      
              />
             </div>

             <button class="btn btn-success">Login</button>
        </form>        
    </div>

    <!-- login with google buttom-->
    <br>
    <div class="col-6 offset-5 mt-2"> 
        <a class="btn btn-danger" href="/auth/google">Login with Google</a> 
    </div>
</div>