<% layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp</h1>
    <div class="col-6 offset-3">
        <form action="/signup"  method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" 
                id="username"
                type="text" 
                class="form-control"
               required
              />
              <div class="valid-feedback">
                Looks good!
              </div>
              </div>

              <!-- for e-mail -->
              <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" 
                id="email"
                type="text" 
                class="form-control"
               required
      
              />            
              </div>

              <!-- password -->              
              <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" 
                id="password"
                type="password" 
                class="form-control"
               required
      
              />
             </div>

             <button class="btn btn-success">SignUp</button>
        </form>
        
    </div>
    
    <!-- login with google buttom -->
    <br>
    <div class="col-6 offset-5 mt-1 mb-2"> 
        <a class="btn btn-danger" href="/auth/google">Login with Google</a> 
    </div>
         
</div>